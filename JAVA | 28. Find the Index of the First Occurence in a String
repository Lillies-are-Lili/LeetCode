/**
* 28. Find the Index of the First Occurrence in a String -- JAVA
*/

class Solution {
    private String haystack = "leetcode";
    private String needle = "leeto";
    public int strStr(String haystack, String needle) {
        if (haystack.contains(needle)){ //if haystack contains need;e
            return haystack.indexOf(needle); //return index of needle
        }
        else 
        return -1; //else return false
    }
}
